# =============================================================================
# TEQUITY VM DEPLOYMENT - ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy to .env and fill in actual values
# This file should NEVER be committed to git
# =============================================================================

# =============================================================================
# DATABASE (Cloud SQL)
# =============================================================================
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?sslmode=require
MASTER_DATABASE_URL=postgresql://postgres:PASSWORD@34.9.81.187:5432/master?sslmode=require
DATABASE_URL=postgresql://postgres:PASSWORD@34.9.81.187:5432/master?sslmode=require

# Cloud SQL admin credentials (for Pulumi provisioning)
SHARED_SQL_ADMIN_USER=postgres
SHARED_SQL_ADMIN_PASSWORD=your-cloud-sql-password

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-64-char-jwt-secret-key-generate-with-crypto-randomBytes
ENCRYPTION_KEY=your-64-char-encryption-key-generate-with-crypto-randomBytes
SERVICE_API_KEY=your-64-char-service-api-key-generate-with-crypto-randomBytes

# =============================================================================
# APPLICATION URLs
# =============================================================================
NEXT_PUBLIC_APP_URL=https://tequity1.lightningleapanalytics.com
NEXT_PUBLIC_ADMIN_URL=https://admin.tequity1.lightningleapanalytics.com
NEXT_PUBLIC_CUSTOMER_APP_URL=https://tequity1.lightningleapanalytics.com

# =============================================================================
# GCP / PULUMI CONFIGURATION
# =============================================================================
GCP_PROJECT_ID=tequity-ajit
GCP_REGION=us-central1
PULUMI_ACCESS_TOKEN=pul_xxxxxxxxxxxx

# Shared SQL instance configuration
USE_SHARED_INSTANCE=true
SHARED_SQL_INSTANCE_NAME=tequity-shared-development
SHARED_SQL_CONNECTION_NAME=tequity-ajit:us-central1:tequity-shared-development
SHARED_SQL_IP=34.9.81.187

# =============================================================================
# FEATURE FLAGS
# =============================================================================
NODE_ENV=production
DEPLOY_ENV=production
PROVISIONING_PROVIDER=pulumi
EMAIL_PROVIDER=mock

# =============================================================================
# AI FEATURES
# =============================================================================
OPENAI_API_KEY=sk-xxxxxxxxxxxx
OPENAI_EMBEDDING_MODEL=text-embedding-ada-002
OPENAI_LLM_MODEL=gpt-4o

# =============================================================================
# DOCKER COMPOSE SPECIFIC
# =============================================================================
IMAGE_TAG=latest
